datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

/**
 * ===============================
 * AUTH (MATCHES YOUR CONTROLLERS)
 * =================================
 */

model User {
  id            String  @id @default(uuid())
  fullName      String
  email         String  @unique
  phone         String?
  passwordHash  String?
  emailVerified Boolean @default(false)

    mustChangePassword Boolean @default(false) // âœ… ADD THIS


  roles    Role[]
  accounts Account[]

  // optional: connect profiles
  agentProfile AgentProfile?
  buyerProfile BuyerProfile?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id   String   @id @default(uuid())
  name RoleType @unique

  users User[]
}

enum RoleType {
  BUYER
  AGENT
  ADMIN
}

model Account {
  id                String @id @default(uuid())
  userId            String
  provider          String
  providerAccountId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
}

/**
 * ===============================
 * PROFILES
 * =================================
 */

model AgentProfile {
  id     String @id @default(uuid())
  userId String @unique

  bio      String?
  company  String?
  verified Boolean @default(false)

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  properties   Property[]
  subscription Subscription?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model BuyerProfile {
  id     String @id @default(uuid())
  userId String @unique

  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  saved     SavedProperty[]
  purchases PropertyPurchase[]
  leads     PropertyLead[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

/**
 * ===============================
 * PROPERTIES
 * =================================
 */

model Property {
  id      String @id @default(uuid())
  agentId String

  title       String
  description String? @db.Text
  price       Int
  location    String

  category  String? // or enum
  bedrooms  Int?
  bathrooms Int?
  sizeSqm   Int?
  furnished Boolean @default(false)
  parking   Boolean @default(false)

  status          PropertyStatus @default(PENDING)
  rejectionReason String?        @db.Text

  agent     AgentProfile       @relation(fields: [agentId], references: [id], onDelete: Cascade)
  images    PropertyImage[]
  leads     PropertyLead[]
  savedBy   SavedProperty[]
  purchases PropertyPurchase[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([agentId])
  @@index([status])
  @@index([createdAt])
}

model PropertyImage {
  id         String @id @default(uuid())
  propertyId String
  url        String

  property  Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([propertyId])
}

enum PropertyStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
  SOLD
}

/**
 * ===============================
 * LEADS / SAVED / PURCHASED
 * =================================
 */

model PropertyLead {
  id         String @id @default(uuid())
  buyerId    String
  propertyId String

  buyer    BuyerProfile @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  property Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([buyerId, propertyId])
  @@index([buyerId])
  @@index([propertyId])
}

model SavedProperty {
  id         String @id @default(uuid())
  buyerId    String
  propertyId String

  buyer    BuyerProfile @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  property Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([buyerId, propertyId])
  @@index([buyerId])
  @@index([propertyId])
}

model PropertyPurchase {
  id         String @id @default(uuid())
  buyerId    String
  propertyId String

  buyer    BuyerProfile @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  property Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([buyerId])
  @@index([propertyId])
}

/**
 * ===============================
 * SUBSCRIPTIONS
 * =================================
 */

model Subscription {
  id        String   @id @default(uuid())
  agentId   String   @unique
  plan      SubPlan  @default(FREE)
  expiresAt DateTime?

  agent     AgentProfile @relation(fields: [agentId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum SubPlan {
  FREE
  BASIC
  PRO
  PREMIUM
}