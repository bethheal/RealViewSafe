generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String        @id @default(uuid())
  email              String        @unique
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  emailVerified      Boolean       @default(false)
  fullName           String
  passwordHash       String?
  phone              String?
  mustChangePassword Boolean       @default(false)
  accounts           Account[]
  agentProfile       AgentProfile?
  buyerProfile       BuyerProfile?
  roles              Role[]        @relation("RoleToUser")
}

model Role {
  id    String   @id @default(uuid())
  name  RoleType @unique
  users User[]   @relation("RoleToUser")
}

model Account {
  id                String @id @default(uuid())
  userId            String
  provider          String
  providerAccountId String
  user              User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
}

model AgentProfile {
  id           String        @id @default(uuid())
  userId       String        @unique
  bio          String?
  company      String?
  verified     Boolean       @default(false)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  suspended    Boolean       @default(false)
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  properties   Property[]
  subscription Subscription?

  @@index([userId])
}

model BuyerProfile {
  id        String             @id @default(uuid())
  userId    String             @unique
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  leads     PropertyLead[]
  purchases PropertyPurchase[]
  saved     SavedProperty[]

  @@index([userId])
}

model Property {
  id              String             @id @default(uuid())
  agentId         String
  title           String
  description     String?
  price           Int
  location        String
  status          PropertyStatus     @default(PENDING)
  rejectionReason String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  bathrooms       Int?
  bedrooms        Int?
  category        String?
  furnished       Boolean            @default(false)
  parking         Boolean            @default(false)
  sizeSqm         Int?
  agent           AgentProfile       @relation(fields: [agentId], references: [id], onDelete: Cascade)
  images          PropertyImage[]
  leads           PropertyLead[]
  purchases       PropertyPurchase[]
  savedBy         SavedProperty[]

  @@index([agentId])
  @@index([status])
  @@index([createdAt])
}

model PropertyImage {
  id         String   @id @default(uuid())
  propertyId String
  url        String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
}

model PropertyLead {
  id         String       @id @default(uuid())
  buyerId    String
  propertyId String
  createdAt  DateTime     @default(now())
  buyer      BuyerProfile @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  property   Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([buyerId, propertyId], name: "buyer_lead_unique")
  @@index([buyerId])
  @@index([propertyId])
}

model SavedProperty {
  id         String       @id @default(uuid())
  buyerId    String
  propertyId String
  createdAt  DateTime     @default(now())
  buyer      BuyerProfile @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  property   Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([buyerId, propertyId], name: "buyer_saved_unique")
  @@index([buyerId])
  @@index([propertyId])
}

model PropertyPurchase {
  id         String       @id @default(uuid())
  buyerId    String
  propertyId String
  createdAt  DateTime     @default(now())
  buyer      BuyerProfile @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  property   Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([buyerId])
  @@index([propertyId])
}

model Subscription {
  id        String       @id @default(uuid())
  agentId   String       @unique
  expiresAt DateTime?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  plan      SubPlan      @default(FREE)
  agent     AgentProfile @relation(fields: [agentId], references: [id])
}

enum RoleType {
  BUYER
  AGENT
  ADMIN
}

enum PropertyStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
  SOLD
  RENTED
}

enum SubPlan {
  FREE
  BASIC
  PRO
  PREMIUM
}
