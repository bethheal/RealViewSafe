generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String        @id @default(uuid())
  email              String        @unique
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  emailVerified      Boolean       @default(false)
  fullName           String
  passwordHash       String?
  phone              String?
  mustChangePassword Boolean       @default(false)
  trialStartedAt     DateTime?
  trialEndsAt        DateTime?
  subscriptionStatus SubscriptionStatus @default(TRIAL)
  paystackCustomerCode String?
  paystackSubscriptionCode String?
  accounts           Account[]
  agentProfile       AgentProfile?
  buyerProfile       BuyerProfile?
  roles              Role[]        @relation("RoleToUser")
  adminAuditLogs     AuditLog[]    @relation("AuditLogAdmin")
  termsAcceptances   TermsAcceptance[] @relation("UserTerms")
}

model Role {
  id    String   @id @default(uuid())
  name  RoleType @unique
  users User[]   @relation("RoleToUser")
}

model Account {
  id                String @id @default(uuid())
  userId            String
  provider          String
  providerAccountId String
  user              User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
}

model AgentProfile {
  id               String          @id @default(uuid())
  userId           String          @unique
  bio              String?
  company          String?
  verified         Boolean         @default(false)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  suspended        Boolean         @default(false)
  avatarUrl        String?
  businessLocation String?
  businessName     String?
  businessPhone    String?
  documents        AgentDocument[]
  user             User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  properties       Property[]
  subscription     Subscription?

  @@index([userId])
}

model AgentDocument {
  id        String            @id @default(uuid())
  agentId   String
  type      AgentDocumentType @default(BUSINESS_PROOF)
  url       String
  label     String?
  verified  Boolean           @default(false)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  agent     AgentProfile      @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([agentId])
}

model BuyerProfile {
  id        String             @id @default(uuid())
  userId    String             @unique
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  avatarUrl String?
  location  String?
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  leads     PropertyLead[]
  purchases PropertyPurchase[]
  saved     SavedProperty[]

  @@index([userId])
}

model Property {
  id              String                  @id @default(uuid())
  agentId         String
  title           String
  description     String?
  price           Int
  location        String
  status          PropertyStatus          @default(PENDING)
  listedByAdmin   Boolean                 @default(false)
  rejectionReason String?
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt
  bathrooms       Int?
  bedrooms        Int?

  furnished       Boolean                 @default(false)
  semiFurnished   Boolean                 @default(false)
  unfurnished     Boolean                 @default(false)

  sizeSqm         Int?
  transactionType PropertyTransactionType @default(SALE)
  type            PropertyType            @default(HOUSE)
  category        PropertyCategory?

  agent           AgentProfile            @relation(fields: [agentId], references: [id], onDelete: Cascade)
  images          PropertyImage[]
  leads           PropertyLead[]
  purchases       PropertyPurchase[]
  savedBy         SavedProperty[]

  @@index([agentId])
  @@index([status])
  @@index([createdAt])
  @@index([type])
  @@index([transactionType])
}


model PropertyImage {
  id         String   @id @default(uuid())
  propertyId String
  url        String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
}

model PropertyLead {
  id         String       @id @default(uuid())
  buyerId    String
  propertyId String
  createdAt  DateTime     @default(now())
  buyer      BuyerProfile @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  property   Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([buyerId, propertyId], name: "buyer_lead_unique")
  @@index([buyerId])
  @@index([propertyId])
}

model SavedProperty {
  id         String       @id @default(uuid())
  buyerId    String
  propertyId String
  createdAt  DateTime     @default(now())
  buyer      BuyerProfile @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  property   Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([buyerId, propertyId], name: "buyer_saved_unique")
  @@index([buyerId])
  @@index([propertyId])
}

model PropertyPurchase {
  id         String       @id @default(uuid())
  buyerId    String
  propertyId String
  createdAt  DateTime     @default(now())
  buyer      BuyerProfile @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  property   Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([buyerId])
  @@index([propertyId])
}

model Subscription {
  id        String       @id @default(uuid())
  agentId   String       @unique
  expiresAt DateTime?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  plan      SubPlan      @default(FREE)
  agent     AgentProfile @relation(fields: [agentId], references: [id])
}

model AuditLog {
  id         String   @id @default(uuid())
  adminId    String
  action     String
  entityType String
  entityId   String?
  details    Json?
  createdAt  DateTime @default(now())

  admin User @relation("AuditLogAdmin", fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([entityType])
  @@index([entityId])
}

model TermsAcceptance {
  id         String   @id @default(uuid())
  userId     String?
  acceptedAt DateTime @default(now())
  ip         String?
  userAgent  String?

  user User? @relation("UserTerms", fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
}

enum AgentDocumentType {
  BUSINESS_PROOF
  ID_CARD
  OTHER
}

enum PropertyType {
  HOUSE
  APARTMENT
  COMMERCIAL
  LAND
}

enum PropertyTransactionType {
  SALE
  RENT
  LEASE
}

enum PropertyCategory {
  HOUSE
  APARTMENT
  COMMERCIAL
}

enum RoleType {
  BUYER
  AGENT
  ADMIN
}

enum PropertyStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
  SOLD
  RENTED
}

enum SubPlan {
  FREE
  BASIC
  PRO
  PREMIUM
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  EXPIRED
}
